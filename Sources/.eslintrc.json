{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        // If variables are declared but not used.
        "@typescript-eslint/no-unused-vars": "warn",
        // If any type is used.	Try to avoid using any type.
        "@typescript-eslint/no-explicit-any": "warn",
        // If console.log is used. Try to avoid letting console.log in the code after debugging.
        "no-console": "warn",
        // Same as above but for debugger statements.
        "no-debugger": "warn"
    }
}
